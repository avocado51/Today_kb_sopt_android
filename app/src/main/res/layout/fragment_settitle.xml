<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/tv_set_title_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:text="티끌모아 태산!"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/et_set_title_hole"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_set_title_title"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="40dp"
            android:hint="목표설정하기"
            android:inputType="text" />

        <LinearLayout
            android:id="@+id/ll_settitleamount_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_set_title_hole"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_set_title_amount"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="16dp"
                android:hint="목표금액설정하기 (최대30만원)"
                android:inputType="number" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="원"
                android:textSize="24sp"
                android:layout_gravity="center"
                android:textColor="#000000"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_settitle_over_amount_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_settitleamount_et"
            android:orientation="horizontal"
            android:visibility="invisible">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="13dp"
                android:layout_marginLeft="40dp"
                android:src="@drawable/ic_warning" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="2dp"
                android:text="목표금액은 최대 30만원 까지 가능합니다."
                android:textColor="#ff6e6e"
                android:textSize="11sp" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>