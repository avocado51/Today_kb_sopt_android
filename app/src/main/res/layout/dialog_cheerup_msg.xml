<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="328dp"
        android:layout_height="410dp">

        <RelativeLayout
            android:layout_below="@+id/txt_dialog_cheerup"
            android:layout_width="280dp"
            android:background="@drawable/button_border"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:backgroundTint="#f5f5f5"
            android:layout_height="186dp">
        <EditText
            android:layout_marginHorizontal="19dp"
            android:id="@+id/edit_cheerup_msg"
            android:inputType="textMultiLine"
            android:background="@null"
            android:hint="친구에게 위로의 한 마디 어떤가요?"
            android:fontFamily="@font/notosanskr_regular_hestia"
            android:lineSpacingExtra="8dp"
            android:includeFontPadding="true"
            android:minLines="3"
            android:gravity="start"
            android:maxHeight="104dp"
            android:textSize="15sp"
            android:layout_marginTop="50dp"
            android:layout_width="241dp"
            android:layout_centerHorizontal="true"
            android:layout_height="98dp"
            android:maxLength="50"
            android:textColorHint="#9e9e9e"
            android:lines="3"
            android:maxLines="3"/>
            <TextView
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#bdbdbd"
                android:textSize="10sp"
                android:fontFamily="@font/notosanskr_medium_hestia"
                android:layout_marginBottom="9dp"
                android:layout_marginRight="20dp"
                android:text="50자 메시지"/>

    </RelativeLayout>
        <RelativeLayout
            android:layout_marginHorizontal="38dp"
            android:layout_marginTop="116dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/txt_dialog_cheerup"
            android:layout_width="240dp"
            android:layout_height="103dp">

            <View
                android:id="@+id/line1"
                android:layout_marginTop="31dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="31dp"
                android:background="#e6e6e6"/>
            <View
                android:layout_below="@+id/line1"
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e6e6e6"/>
            <View
                android:layout_marginBottom="6dp"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e6e6e6"/>

        </RelativeLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mail_1"
            android:layout_marginTop="26.9dp"
            android:layout_centerHorizontal="true"/>
    <TextView
    android:id="@+id/txt_dialog_cheerup"
    android:textSize="20sp"
    android:textColor="#424242"
    android:letterSpacing="-0.01"
    android:layout_centerHorizontal="true"
    android:text="승언님은 오늘 기분이 안좋아요"
    android:layout_marginTop="56dp"
    android:fontFamily="@font/notosanskr_medium_hestia"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    />

        <TextView
            android:id="@+id/btn_cancel_dialog_cheerup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="취소"
            android:layout_marginRight="32dp"
            android:textColor="#bdbdbd"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/btn_send_dialog_cheerup"
            android:textSize="14sp"
            android:layout_marginBottom="32dp"
            android:fontFamily="@font/notosanskr_medium_hestia"
            android:letterSpacing="-0.01"
            />
        <TextView
            android:id="@+id/btn_send_dialog_cheerup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="메시지 보내기"
            android:layout_marginRight="24dp"
            android:fontFamily="@font/notosanskr_medium_hestia"
            android:textColor="#03a5ff"
            android:layout_marginBottom="32dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:textSize="14sp"
            android:letterSpacing="-0.01"
            />
    </RelativeLayout>
</RelativeLayout>