<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginLeft="16dp">

    <TextView
        android:id="@+id/main_name_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="89dp"
        android:lineSpacingExtra="40sp"
        android:text="오늘은 님!"
        android:textColor="#000000"
        android:textSize="40sp" />

    <TextView
        android:layout_below="@id/main_name_txt"
        android:id="@+id/main_ticcle_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:lineSpacingExtra="40sp"
        android:text="티끌모아 "
        android:textColor="#000000"
        android:textSize="40sp" />
    <TextView
        android:id="@+id/main_deposit_txt"
        android:layout_toRightOf="@id/main_ticcle_txt"
        android:layout_below="@id/main_name_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:lineSpacingExtra="40sp"
        tools:text=" eee "
        android:textColor="#000000"
        android:textSize="40sp" />

    <TextView
        android:layout_below="@id/main_deposit_txt"
        android:id="@+id/main_hello_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:lineSpacingExtra="40sp"
        android:text="한걸음 더!"
        android:textColor="#000000"
        android:textSize="40sp" />
    
    <ImageView
        android:id="@+id/main_deposit_img"
        android:layout_width="196dp"
        android:layout_height="176dp"
        android:layout_below="@id/main_hello_txt"
        android:layout_centerInParent="true"
        android:layout_marginTop="47dp"
        />

    <TextView
        android:layout_width="260dp"
        android:layout_height="54dp"
        android:text="1*,***원"
        android:textSize="30sp"
        android:textColor="#000000"
        android:layout_centerInParent="true"
        android:layout_marginTop="34.5dp"
        android:layout_below="@id/main_deposit_img"

        />
</RelativeLayout>