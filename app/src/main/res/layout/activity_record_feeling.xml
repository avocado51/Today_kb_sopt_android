<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
        android:id="@+id/record_feeling_hello_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="오늘은 기분이 어때요?"
        android:textColor="#000000"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="64dp"

        />
    <TextView
        android:id="@+id/record_feeling_variation_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:gravity="center_horizontal"
        android:text="날 내버려둬요"
        android:textColor="#000000"
        android:layout_marginTop="396dp"

        />
    <SeekBar
        android:layout_marginLeft="64dp"
        android:layout_below="@id/record_feeling_variation_txt"
        android:id="@+id/seekBar"
        android:layout_width="247dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:max="6"
        android:thumb="@drawable/seekbar_thumb"
        android:progress="3"
        android:progressDrawable="@drawable/custom_seekbar"
        />

    <Button
        android:id="@+id/record_save_btn"
        android:layout_width="299dp"
        android:layout_height="wrap_content"
        android:text="기록하기"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textAlignment="center"
        android:backgroundTint="#ffdb07"
        android:background="@drawable/custom_button_radius"
        android:layout_below="@id/seekBar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="74dp"/>
</RelativeLayout>