<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15.9dp"
    android:layout_marginBottom="10dp">
    <ImageView
        android:id="@+id/community_user_img"
        android:layout_width="31dp"
        android:layout_height="26dp"
        />
    <TextView
        android:id="@+id/community_user_id_txt"
        android:layout_toRightOf="@id/community_user_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오늘은"
        android:layout_marginLeft="30dp"
        />
    <View
        android:layout_marginLeft="81dp"
        android:id="@+id/community_view"
        android:layout_toRightOf="@id/community_user_id_txt"
        android:layout_width="150dp"
        android:layout_height="16dp"
        android:backgroundTint="#ededed"
        android:background="@drawable/community_button_radius"
        />
    <TextView
        android:id="@+id/community_status_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/community_view"
        android:layout_alignLeft="@id/community_view"
        android:layout_alignRight="@id/community_view"
        android:layout_alignTop="@id/community_view"
        android:gravity="center"
        android:text="건드리면 물어요"/>
    <View
        android:layout_marginLeft="12dp"
        android:id="@+id/community_friends_status_mark_view"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:background="@drawable/community_status_mark"
        android:layout_toRightOf="@id/community_status_txt"/>
    <TextView
        android:id="@+id/community_friends_status_mark_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/community_friends_status_mark_view"
        android:layout_alignLeft="@id/community_friends_status_mark_view"
        android:layout_alignRight="@id/community_friends_status_mark_view"
        android:layout_alignTop="@id/community_friends_status_mark_view"
        android:gravity="center"
        android:textColor="#ffffff"
        android:text="-3"/>
</RelativeLayout>