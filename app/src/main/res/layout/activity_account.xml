<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
        android:id="@+id/account_hello_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="저금통으로 이용할 \n가상계좌를 개설합니다."
        android:textSize="30sp"
        android:textColor="#000000"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="115dp"
        />
    <View
        android:layout_below="@id/account_hello_txt"
        android:id="@+id/account_view"
        android:layout_width="261dp"
        android:layout_height="192.9dp"
        android:background="#ffde5f"
        android:layout_marginLeft="58dp"
        android:layout_marginTop="59dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="계좌 개설하기"
        android:gravity="center"
        android:textColor="#000000"
        android:layout_alignTop="@id/account_view"
        android:layout_alignBottom="@id/account_view"
        android:layout_alignLeft="@id/account_view"
        android:layout_alignRight="@id/account_view"/>

</RelativeLayout>