<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/dialog_record_emotion_rl"
        android:layout_width="304dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        >
        <TextView
            android:id="@+id/txt_name"
            android:layout_marginTop="48dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="이승언님,"
            android:fontFamily="@font/notosanskr_bold_hestia"
            android:textSize="20sp"
            android:textColor="#424242"
            android:letterSpacing="-0.01"
            />
        <TextView
            android:layout_below="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="오늘의 감정을 기록하시겠어요?"
            android:fontFamily="@font/notosanskr_medium_hestia"
            android:textSize="16sp"
            android:textColor="#424242"
            android:letterSpacing="-0.01"
            />

        <TextView
            android:id="@+id/btn_save_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="저장"
            android:layout_marginRight="24dp"
            android:textColor="#03a5ff"
            android:layout_marginBottom="32dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:textSize="14sp"
            android:letterSpacing="-0.01"
            />
        <TextView
            android:id="@+id/btn_cancel_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="취소"
        android:layout_marginRight="32dp"
        android:textColor="#bdbdbd"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/btn_save_dialog"
        android:textSize="14sp"
            android:layout_marginBottom="32dp"
        android:letterSpacing="-0.01"
        />
    </RelativeLayout>
</RelativeLayout>