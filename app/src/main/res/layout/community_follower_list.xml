<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="34dp">

    <TextView
        android:id="@+id/community_follower_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="22dp"
        android:text="오늘은"
        android:textColor="#000000"
        android:textSize="14sp" />

    <View
        android:id="@+id/community_btn_check_following"
        android:layout_width="98dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="26dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/community_button_radius"
        android:backgroundTint="#ffffff" />

    <TextView
        android:id="@+id/community_following_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/community_btn_check_following"
        android:layout_alignLeft="@id/community_btn_check_following"
        android:layout_alignRight="@id/community_btn_check_following"
        android:layout_alignTop="@id/community_btn_check_following"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="팔로잉"
        android:textColor="#000000" />

    <View
        android:id="@+id/community_btn_check_follower"
        android:layout_width="98dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="26dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/community_button_radius"
        android:backgroundTint="#ffde5f"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/community_follower_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/community_btn_check_follower"
        android:layout_alignLeft="@id/community_btn_check_follower"
        android:layout_alignRight="@id/community_btn_check_follower"
        android:layout_alignTop="@id/community_btn_check_follower"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="팔로우"
        android:textColor="#000000"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/community_following_check"
        android:layout_alignBottom="@id/community_btn_check_following"
        android:layout_alignLeft="@id/community_following_txt"
        android:layout_alignRight="@id/community_btn_check_following"
        android:layout_alignTop="@id/community_btn_check_following"
        android:layout_toRightOf="@id/community_following_txt"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginLeft="30dp"
        android:src="@drawable/tick"
        />

</RelativeLayout>