<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_above="@+id/txt_confirm_withdraw"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/frag_container1"
            android:layout_width="match_parent"
            android:layout_height="70dp">
            <!--com.kb.challenge.app.today.today_android.view.main.CustomViewPager
            android:id="@+id/viewpager1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            /-->
        </FrameLayout>

        <FrameLayout
    android:id="@+id/frag_container2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--com.kb.challenge.app.today.today_android.view.main.CustomViewPager
        android:id="@+id/viewpager1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        /-->
</FrameLayout>
    </LinearLayout>
    <TextView
        android:layout_above="@+id/rl_withdraw_yes_or_no"
        android:id="@+id/txt_confirm_withdraw"
        android:fontFamily="@font/notosanskr_medium_hestia"
        android:layout_marginBottom="56dp"
        android:layout_below="@+id/img_goal_pig"
        android:textSize="20dp"
        android:textColor="#545454"
        android:letterSpacing="-0.01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="정말 인출하실건가요?"/>
    <RelativeLayout
        android:id="@+id/rl_withdraw_yes_or_no"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="90dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_withdraw_yes"
            android:layout_width="120dp"
            android:layout_height="44dp"
            android:layout_marginHorizontal="13dp"
            android:background="@drawable/button_border2"
            android:text="예"
            android:textAlignment="center"
            android:textColor="#424242" />
        <Button
            android:layout_toRightOf="@+id/btn_withdraw_yes"
            android:id="@+id/btn_withdraw_no"
            android:layout_width="120dp"
            android:layout_height="44dp"
            android:layout_marginHorizontal="13dp"
            android:background="@drawable/custom_button_radius"
            android:backgroundTint="#ffdb08"
            android:text="아니오"
            android:textAlignment="center"
            android:textColor="#424242" />
        </RelativeLayout>
</RelativeLayout>