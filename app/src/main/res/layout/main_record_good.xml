<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_good_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp">

    <TextView
        android:id="@+id/main_name_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="89dp"
        android:lineSpacingExtra="40sp"
        android:text="오늘은 님!"
        android:textColor="#000000"
        android:textSize="40sp" />

    <TextView
        android:layout_below="@id/main_name_txt"
        android:id="@+id/main_hello_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:lineSpacingExtra="40sp"
        android:text="기분좋게 \n저금 어때요?"
        android:textColor="#000000"
        android:textSize="40sp" />

    <LinearLayout
        android:layout_below="@id/main_hello_txt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/deposit_spinner"
            android:layout_width="155dp"
            android:layout_height="48dp"
            android:layout_marginLeft="8dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_main_deposit"
            android:layout_width="138dp"
            android:layout_height="48dp"
            android:layout_marginLeft="25dp"
            android:background="@drawable/custom_button_radius"
            android:backgroundTint="#ffde5f"
            android:text="저금"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="14sp" />
    </LinearLayout>
</RelativeLayout>